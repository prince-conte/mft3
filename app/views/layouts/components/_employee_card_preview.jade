mixin employeeCardPreview(name, desc, actions)
    article.employee-card-preview.card.js-hover-container
        .employee-card-preview__content
            a.js-hover(href='employee_articles.html')
                img.employee-card-preview__userpic(src='../assets/images/userpic.svg' alt='')
            h2.employee-card-preview__title
                a.employee-card-preview__title-link.js-hover(href='employee_articles.html')= name

            if desc
                p.employee-card-preview__desc= desc

        if actions
            .controls-button-grid.controls-button-grid--top-auto

                    a.control-button.control-button--edit Редактировать

                    a.control-button.control-button--delete

.popup.popup--authorization#popup-authorization
    include _popup_close
    article.popup-authorization
        h5.popup-authorization__title Выберите соцсеть для входа или регистрации:
        ul.popup-authorization__social
            li
                a.is-twitter(href='#') Twitter
            li
                a.is-facebook(href='#') Facebook
            li
                a.is-google-plus(href='#') Google
        footer.popup-authorization__support При поддержке <a href='#'>ft3.com</a>

.popup#popup-review-not-authorized
    include _popup_close
    .review-card.review-card--popup.review-card--add.card
        form.review-add(action='#')
            fieldset.review-add__fieldset
                legend.review-add__legend Максим Скрябин
                textarea.review-add__textarea.js-textarea-autosize.js-authorization-focus(rows='1' placeholder='Текст отзыва...')

.popup#popup-review-authorized
    include _popup_close
    .review-card.review-card--popup.card
        form.review-add(action='#')
            fieldset.review-add__fieldset
                legend.review-add__legend Максим Скрябин
                textarea.review-add__textarea.js-textarea-autosize(rows='1' placeholder='Текст отзыва...' autofocus)
            ul.review-add__action
                li
                    img.user__avatar-img(src='../assets/images/avatar.svg' width='40' height='40' alt='')
                li
                    input.button.button--filled(type='submit' value='Отправить')
                li.review-add__action-attitude
                    ul.review-add__attitude
                        li
                            input(type='radio' name='attitude')
                            i.icon.icon--24.mdi.mdi-thumb-up-outline
                            i.icon.icon--24.mdi.mdi-thumb-up
                            p положительный
                        li.is-hr: hr
                        li
                            input(type='radio' name='attitude')
                            i.icon.icon--24.mdi.mdi-thumb-down-outline
                            i.icon.icon--24.mdi.mdi-thumb-down
                            p отрицательный

.popup#popup-answer
    include _popup_close
    .review-card.review-card--popup.card
        form.review-add(action='#')
            fieldset.review-add__fieldset
                legend.review-add__legend.review-add__legend--employee Андрей Богоявленский
                textarea.review-add__textarea.js-textarea-autosize(rows='4' placeholder='Текст ответа...' autofocus)
            ul.review-add__action
                li.review-add__action-send
                    input.button.button--filled(type='submit' value='Ответить')

